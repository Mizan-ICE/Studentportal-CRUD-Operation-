@model Studentportal.Models.Entities.Student
@if(Model is null){
    <p>no student</p>
}
else{
    <form method="post">

    <h1>Add Student</h1>
    <div class="mt-2">
        <label class="form-label">Id </label>
        <input type="text" class="form-control" asp-for="Id" />
    <div class="mt-3">
        <label class="form-label">Name </label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
